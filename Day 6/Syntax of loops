import java.util.Scanner;
public class MenuSelection {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int choice;
        do {
            System.out.println("\nMenu:");
            System.out.println("1. if statement");
            System.out.println("2. if-else statement");
            System.out.println("3. switch statement");
            System.out.println("4. for loop");
            System.out.println("5. while loop");
            System.out.println("6. do-while loop");
            System.out.println("7. Exit");
            System.out.print("Enter your choice: ");
            choice = scanner.nextInt();
            switch (choice) {
                case 1:
                    System.out.println("\nSyntax of if statement:");
                    System.out.println("if (condition) {");
                    System.out.println("    // statements");
                    System.out.println("}");
                    break;
                case 2:
                    System.out.println("\nSyntax of if-else statement:");
                    System.out.println("if (condition) {");
                    System.out.println("    // statements");
                    System.out.println("} else {");
                    System.out.println("    // statements");
                    System.out.println("}");
                    break;
                case 3:
                    System.out.println("\nSyntax of switch statement:");
                    System.out.println("switch (expression) {");
                    System.out.println("    case value1:");
                    System.out.println("        // statements");
                    System.out.println("        break;");
                    System.out.println("    case value2:");
                    System.out.println("        // statements");
                    System.out.println("        break;");
                    System.out.println("    // more cases");
                    System.out.println("    default:");
                    System.out.println("        // statements");
                    System.out.println("}");
                    break;
                case 4:
                    System.out.println("\nSyntax of for loop:");
                    System.out.println("for (initialization; condition; update) {");
                    System.out.println("    // statements");
                    System.out.println("}");
                    break;
                case 5:
                    System.out.println("\nSyntax of while loop:");
                    System.out.println("while (condition) {");
                    System.out.println("    // statements");
                    System.out.println("}");
                    break;
                case 6:
                    System.out.println("\nSyntax of do-while loop:");
                    System.out.println("do {");
                    System.out.println("    // statements");
                    System.out.println("} while (condition);");
                    break;
                case 7:
                    System.out.println("Exiting...");
                    break;
                default:
                    System.out.println("Invalid choice! Please select a valid option.");
            }
        } while (choice != 7);

        scanner.close();
    }
}
